<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.kit.welcomecardexample.MainActivity">
    <ImageView
        android:src="@drawable/welcometohk"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/img"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"

         />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/img"
        android:background="#B26A33">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginTop="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="환영!"
                    android:layout_weight="1"
                    android:id="@+id/kor"
                    android:textSize="45sp"
                    android:textAlignment="center"
                    android:background="@drawable/korea"
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#fbc02d"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Vítejte!"
                    android:id="@+id/czech"
                    android:textSize="45sp"
                    android:textAlignment="center"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/czech"
                    android:gravity="center"
                    android:textColor="#ec407a"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="歡迎!"
                android:layout_weight="1"
                android:id="@+id/tch"
                android:textSize="45sp"
                android:textAlignment="center"
                android:background="@drawable/taiwan"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="欢迎!"
                android:id="@+id/sch"
                android:textSize="45sp"
                android:textAlignment="center"
                android:background="@drawable/china"
                android:gravity="center"
                android:textColor="#FFFFFF"
                />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
